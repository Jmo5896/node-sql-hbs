<h1>checklist</h1>

<h3>Things to do</h3>

<ul>
    {{#each checklist}}
    <li>{{this.checklist_item}}</li>
    {{/each}}
</ul>

<form action="/api/create" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Add Item</label>
    <input type="text" class="form-control" name = "newItem" placeholder="enter todo item">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

